<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2DA2EF" />
            <stroke
                android:width="1dp"
                android:color="#0D6CAA" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#2DA2EF"
                android:endColor="#0D6CAA"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0D6CAA" />

        </shape>
    </item>
</selector>